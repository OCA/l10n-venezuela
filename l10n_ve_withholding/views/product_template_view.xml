<odoo>
    <data>
        <record id="view_product_template_form_inherit_isrl" model="ir.ui.view">
            <field name="name">view.product.template.isrl.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='taxes_id']" position="after">
                    <field name="disable_islr"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>